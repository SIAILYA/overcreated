{% extends "index.njk" %}

{% block content %}
    <h2 class="mb-4 text-center">Проекты</h2>
    <div class="row text-center projects-list">
        {% for project in allProjects %}
            <a class="text-decoration-none d-block project mx-2 text-black card col-12 col-md-6 col-lg-4 p-2" href="/admin/edit_project/{{ project._id.toString() }}">
                <h2 style="background: linear-gradient(45deg, {{project.color[0] if project.color[0] else "#000"}} 33%, {{project.color[1] if project.color[1] else "#000"}} 66%, #8AA9D6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    {{ project.name }}
                </h2>
                <span>{{ project.shortDescription }}</span>
                <div class="d-flex my-1">
                    <span class="material-icons-outlined my-auto me-2">schedule</span>
                    <span class=" my-auto">~{{ project.developTime }} часов</span>
                </div>
                <div class="d-flex my-1">
                    <span class="material-icons-outlined my-auto me-2">reorder</span>
                    <span class=" my-auto">{{ project.techs | join(", ") }}</span>
                </div>
                <div class="d-flex my-1">
                    <span class="material-icons-outlined my-auto me-2">link</span>
                    <div class=" my-auto">{{project.demoLink}}</div>
                </div>
            </a>
        {% endfor %}
    </div>
    <div class="text-center mt-3">
        <a class="text-center text-decoration-none" href="/admin/add_project">
            <button class="btn btn-success d-flex mx-auto">
                <span class="material-icons-outlined my-auto">add</span>
                <span class="my-auto">Добавить проект</span>
            </button>
        </a>
    </div>
{% endblock %}
